{
    "name": "hungry-vegan-server",
    "repository": "git@github.com:sasha-kir/hungry-vegan-server.git",
    "version": "0.1.0",
    "description": "API for hungry-vegan",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "build": "tsc",
        "postinstall": "install-types",
        "lint": "eslint . & echo 'lint complete'",
        "dev": "cross-env ROARR_LOG=true ts-node-dev --no-notify --respawn --transpileOnly ./src/server.ts",
        "create-migration": "node-pg-migrate create --tsconfig ./tsconfig.json",
        "migrate-up": "node-pg-migrate up --tsconfig ./tsconfig.json",
        "migrate-down": "node-pg-migrate down 4 --tsconfig ./tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --testTimeout=10000 -i",
        "pretest": "npm run migrate-down-test && npm run migrate-up-test",
        "migrate-up-test": "npm run migrate-up -- -d TEST_DATABASE_URL",
        "migrate-down-test": "npm run migrate-down -- -d TEST_DATABASE_URL"
    },
    "author": "Sasha Kirillov",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.2",
        "bcrypt": "^3.0.8",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "cryptus": "^1.5.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg-native": "^3.0.0",
        "slonik": "^22.4.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.6",
        "@types/eslint": "^6.8.0",
        "@types/eslint-plugin-prettier": "^2.2.0",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.1",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/node": "^13.13.2",
        "@types/prettier": "^1.19.1",
        "@types/slonik": "^22.1.2",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "install-types": "^2.0.1",
        "jest": "^25.4.0",
        "jest-extended": "^0.11.5",
        "lint-staged": "^10.1.7",
        "node-pg-migrate": "^4.6.2",
        "prettier": "^1.19.1",
        "roarr": "^2.15.3",
        "supertest": "^4.0.2",
        "ts-jest": "^25.4.0",
        "ts-node": "^8.9.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
    }
}
