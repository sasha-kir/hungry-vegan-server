{
    "name": "hungry-vegan-server",
    "repository": "git@github.com:sasha-kir/hungry-vegan-server.git",
    "version": "0.1.0",
    "description": "API for hungry-vegan",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "build": "tsc",
        "postinstall": "install-types",
        "lint": "eslint src/**/*.ts & echo 'lint complete'",
        "dev": "cross-env ROARR_LOG=true ts-node-dev --no-notify --respawn --transpile-only ./src/server.ts",
        "create-migration": "node-pg-migrate create --tsconfig ./tsconfig.json",
        "migrate-up": "node-pg-migrate up --tsconfig ./tsconfig.json",
        "migrate-down": "node-pg-migrate down --tsconfig ./tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --testTimeout=15000 -i",
        "pretest": "npm run migrate-down-test && npm run migrate-up-test",
        "migrate-up-test": "npm run migrate-up -- -d TEST_DATABASE_URL",
        "migrate-down-test": "npm run migrate-down -- 4 -d TEST_DATABASE_URL"
    },
    "author": "Sasha Kirillov",
    "license": "ISC",
    "dependencies": {
        "axios": "0.21.1",
        "bcrypt": "5.0.0",
        "body-parser": "1.19.0",
        "cors": "2.8.5",
        "cryptus": "2.0.0",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "express-jwt": "6.0.0",
        "jsdom": "16.4.0",
        "jsonwebtoken": "8.5.1",
        "node-cache": "5.1.2",
        "pg-native": "3.0.0",
        "slonik": "23.5.4",
        "slonik-interceptor-field-name-transformation": "1.5.3"
    },
    "devDependencies": {
        "@slonik/typegen": "0.8.0",
        "@types/bcrypt": "3.0.0",
        "@types/body-parser": "1.19.0",
        "@types/cors": "2.8.9",
        "@types/eslint": "7.2.6",
        "@types/eslint-plugin-prettier": "3.1.0",
        "@types/express": "4.17.11",
        "@types/express-jwt": "6.0.0",
        "@types/jest": "26.0.20",
        "@types/jsdom": "16.2.6",
        "@types/jsonwebtoken": "8.5.0",
        "@types/node": "13.13.40",
        "@types/pg": "7.14.9",
        "@types/prettier": "2.1.6",
        "@types/roarr": "2.14.2",
        "@types/slonik": "22.1.4",
        "@types/source-map-support": "0.5.3",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "4.14.1",
        "@typescript-eslint/parser": "4.14.1",
        "cross-env": "7.0.3",
        "eslint": "7.18.0",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.1",
        "husky": "4.3.8",
        "install-types": "2.0.1",
        "jest": "26.6.3",
        "jest-extended": "0.11.5",
        "lint-staged": "10.5.3",
        "node-pg-migrate": "5.9.0",
        "pg": "8.5.1",
        "prettier": "2.2.1",
        "roarr": "3.3.0",
        "source-map-support": "0.5.19",
        "supertest": "6.1.2",
        "ts-jest": "26.4.4",
        "ts-node": "9.1.1",
        "ts-node-dev": "1.1.1",
        "typescript": "4.1.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
    }
}
