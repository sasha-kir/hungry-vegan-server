{
    "name": "hungry-vegan-server",
    "repository": "git@github.com:sasha-kir/hungry-vegan-server.git",
    "version": "0.1.0",
    "description": "API for hungry-vegan",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "build": "tsc",
        "postinstall": "install-types",
        "lint": "eslint src/**/*.ts & echo 'lint complete'",
        "dev": "cross-env ROARR_LOG=true ts-node-dev --no-notify --respawn --transpileOnly ./src/server.ts",
        "create-migration": "node-pg-migrate create --tsconfig ./tsconfig.json",
        "migrate-up": "node-pg-migrate up --tsconfig ./tsconfig.json",
        "migrate-down": "node-pg-migrate down --tsconfig ./tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --testTimeout=15000 -i",
        "pretest": "npm run migrate-down-test && npm run migrate-up-test",
        "migrate-up-test": "npm run migrate-up -- -d TEST_DATABASE_URL",
        "migrate-down-test": "npm run migrate-down -- 4 -d TEST_DATABASE_URL"
    },
    "author": "Sasha Kirillov",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.2",
        "bcrypt": "^3.0.8",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "cryptus": "^1.5.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-jwt": "^5.3.3",
        "jsonwebtoken": "^8.5.1",
        "pg-native": "^3.0.0",
        "slonik": "^22.4.8",
        "slonik-interceptor-field-name-transformation": "^1.5.3"
    },
    "devDependencies": {
        "@slonik/typegen": "0.6.0",
        "@types/bcrypt": "3.0.0",
        "@types/body-parser": "1.19.0",
        "@types/cors": "2.8.6",
        "@types/eslint": "6.8.1",
        "@types/eslint-plugin-prettier": "2.2.0",
        "@types/express": "4.17.6",
        "@types/express-jwt": "0.0.42",
        "@types/jest": "25.2.3",
        "@types/jsonwebtoken": "8.5.0",
        "@types/node": "13.13.10",
        "@types/pg": "7.14.3",
        "@types/prettier": "1.19.1",
        "@types/roarr": "2.14.2",
        "@types/slonik": "22.1.2",
        "@types/source-map-support": "0.5.1",
        "@types/supertest": "2.0.9",
        "@typescript-eslint/eslint-plugin": "2.34.0",
        "@typescript-eslint/parser": "2.34.0",
        "cross-env": "7.0.2",
        "eslint": "7.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prettier": "3.1.3",
        "husky": "4.2.5",
        "install-types": "2.0.1",
        "jest": "25.5.4",
        "jest-extended": "0.11.5",
        "lint-staged": "10.2.9",
        "node-pg-migrate": "4.8.0",
        "pg": "8.2.1",
        "prettier": "1.19.1",
        "roarr": "2.15.3",
        "source-map-support": "0.5.19",
        "supertest": "4.0.2",
        "ts-jest": "25.5.1",
        "ts-node": "8.10.2",
        "ts-node-dev": "1.0.0-pre.44",
        "typescript": "3.9.5"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
    }
}
